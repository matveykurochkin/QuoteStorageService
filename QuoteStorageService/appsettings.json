{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //Настройки HTTP сервера
  "Http": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5001"
      }
    }
  },
  "Storage" : {
    //DB | FileSystem
    "Type" : "FileSystem",
    "DB" : {
      //Строка подключения к бд
      "ConnectionString" : "Server=localhost\\SQLEXPRESS;Database=QuoteStorage;Trusted_Connection=True;TrustServerCertificate=True"
    },
    "FileSystem" : {
      //Абсолютный путь к базовой директории
      "BaseDirectory" : "C:\\temp"
    }
  }  
}
